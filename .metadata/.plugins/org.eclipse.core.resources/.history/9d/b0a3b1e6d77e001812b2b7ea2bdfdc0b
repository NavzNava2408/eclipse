
public class Iterations {
	public static void main(String[] args) {
		int output = 2;
		int x = 1;
		while (x <= 10) {
			output = Mathing(output,2,true);
			System.out.println(output);
			x++;
		}		
	}
	
	public static int Mathing(int x, int y, boolean z) {
		if (x == 0 | y == 0) {
			return x + y;}
		if (z == true) {
			return x + y;
		}
		else {
			return x*y;
		}
	}
}
