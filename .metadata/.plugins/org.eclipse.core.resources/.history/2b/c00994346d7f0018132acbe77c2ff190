
public class Switch {
	public static void main(String[] args) {
		int day = 3;
		switch (day) {
		 case 1:
		 System.out.println("Garfield hates Mondays");
		 break;
		// etc, the other days of the week
		 case 6:
		System.out.println("Saturday");
		 break;
		 case 7:
		 System.out.println("Sunday");
		break;
		 default:
		 System.out.println("Not a day");
		 break;
		}
	}
}
