
public class Blackjack {
	public static void main(String[] args) {
		int x = (int)(Math.random()*30 + 1);
		int y = (int)(Math.random()*30 + 1);
		
		System.out.println("Player with: " + x);
		System.out.println("Dealer with: " + y);
		
		if (x == y) {
			System.out.println("Draw at: " + y);
		}
		elseif (x > 21 && y > 21) {
			System.out.println("Both Bust: 0, Dealer wins");
		}
		if (x > 21 || y > 21) {
			if (x > 21) {
				System.out.println("Player Bust. Dealer wins with: " + y);				
			}
			else {
				System.out.println("Dealer Bust. Player wins with: " + x);
			}
		}
		if (x>y) {
			
		}
	}
}
